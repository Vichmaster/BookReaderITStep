<Window x:Class="Project11.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project11"
        mc:Ignorable="d"
        Title="BookReader" Height="500" Width="800" WindowStartupLocation="CenterScreen" x:Name="MainWin"  Style="{DynamicResource WindowStyle}">
    <Window.CommandBindings>
        <CommandBinding Command="ApplicationCommands.Open" Executed="OpenCommand_Executed"/>
        <CommandBinding Command="ApplicationCommands.Close" Executed="CloseCommand_Executed"/>
    </Window.CommandBindings>
    <DockPanel>
        <WrapPanel DockPanel.Dock="Top" Height="50">
            <Button Width="80" Margin="1" x:Name="openButton" Command="Open" Style="{DynamicResource ButtonStyle}">
                <Image Source="/Icons/Open_icon.png" />
            </Button>
            <Button Width="70" Margin=" 1" Click="Font_Click" Style="{DynamicResource ButtonStyle}">
                <Image Source="/Icons/Font_Folder.png" />
            </Button>
            <Button Width="70" Margin=" 1" Style="{DynamicResource ButtonStyle}">
                <Image Source="/Icons/bookmark.png" />
            </Button>
            <Button Width="70" Margin=" 1" Click="Button_Fav_Click" Style="{DynamicResource ButtonStyle}">
                <Image Source="/Icons/favorites_1.png" />
            </Button>
            <Button Width="70" Margin=" 1" x:Name="styleBtn" Click="styleBtn_Click" Style="{DynamicResource ButtonStyle}">
                <Image Source="/Icons/sun_moon.png" />
            </Button>
            <ToolBar x:Name="audio" Margin="1" Style="{DynamicResource ToolBarStyle}">
                <Image Source="/Icons/audio_sound.png" />
                <Button Width="50" Margin=" 1" Click="Play_Click" Style="{DynamicResource ButtonStyle}">
                    <Image Source="/Icons/play_icon.png" />
                </Button>
                <Button Width="50" Margin=" 1" Click="Pause_Click" Style="{DynamicResource ButtonStyle}">
                    <Image Source="/Icons/pause_icon.png" />
                </Button>
                <Button Width="50" Margin=" 1" Click="Stop_Click" Style="{DynamicResource ButtonStyle}">
                    <Image Source="/Icons/stop_icon.png" />
                </Button>
            </ToolBar>
            <Button Width="50" Margin="1" Visibility="Collapsed" Name="PreviousButton"  Click="PreviousButton_Click" Style="{DynamicResource ButtonStyle}">
                <Image Source="/Icons/back.png" />
            </Button>
            <Button Width="50" Margin="1" Visibility="Collapsed" Name="NextButton" Click="NextButton_Click" Style="{DynamicResource ButtonStyle}">
                <Image Source="/Icons/forward.png" />
            </Button>
            <Button Width="70" Margin="1" Command="Close" Style="{DynamicResource ButtonStyle}">
                <Image Source="/Icons/SignOut.png" />
            </Button>
        </WrapPanel>
        <DockPanel>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="{Binding ElementName=bookListBox, Path=Width}"/>
                    <ColumnDefinition Width="{Binding ElementName=ListBoxBtn, Path=Width}"/>
                    <ColumnDefinition Width="4*"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="1" VerticalAlignment="Stretch"  x:Name="ListBoxBtn" FontSize="14" HorizontalAlignment="Left" Width="20" Click="openList" Style="{DynamicResource ButtonStyle}">
                    <Image Source="/Icons/openArrows.png" x:Name="ListBoxImg"/>
                </Button>
                <ListBox Grid.Column="0" x:Name="bookListBox" Width="0" Style="{DynamicResource ListBoxStyle}">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="ContextMenu">
                                <Setter.Value>
                                    <ContextMenu>
                                        <ContextMenu.Items>
                                            <MenuItem x:Name="addfavorite" Header="Добавить в избранное">
                                                <MenuItem.Style>
                                                    <Style TargetType="MenuItem">
                                                        <EventSetter Event="Click" Handler="addFavorite"/>
                                                    </Style>
                                                </MenuItem.Style>
                                            </MenuItem>
                                            <MenuItem x:Name="delfavorite" Header="Удалить из избранного">
                                                <MenuItem.Style>
                                                    <Style TargetType="MenuItem">
                                                        <EventSetter Event="Click" Handler="delFavorite"/>
                                                    </Style>
                                                </MenuItem.Style>
                                            </MenuItem>
                                        </ContextMenu.Items>
                                    </ContextMenu>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>
                <FlowDocumentReader Grid.Column="2" Margin="1"  x:Name="flowDocReader" Style="{DynamicResource FlowDocumentStyle}">
                    <FlowDocument ColumnWidth="1000" x:Name="flowDoc">
                        <Paragraph x:Name="Par">
                            Welcome to the application "Book Reader",
                        developed by students of the group 36pr31  IT Step Academy
                        </Paragraph>
                    </FlowDocument>
                </FlowDocumentReader>
                <WebBrowser Grid.Column="2" Margin="15" x:Name="web" Visibility="Collapsed" ScrollViewer.CanContentScroll="True" />
            </Grid>
        </DockPanel>
    </DockPanel>
</Window>
